<div class="container-fluid burger-page">
  <!-- Burger Image -->
  <div  class="text-center">
  <img id="burger-img" class="img-fluid" src="assets/img/da-burger.png">
</div>

<h1 class="text-center vertical-margin-sm">Eat-Da-Burger</h1>

<div class="row burger-info">
  <div class="col-md-6 col-sm-6">
    <ol class="">
    {{#each burgers}}
      {{#unless devoured}}
        {{> uneaten-block}}
      {{/unless}}
    {{/each}}
    </ol>
  </div>
  <div class="col-md-6 col-sm-6">
    <ol>
    {{#each burgers}}
      {{#if devoured}}
        {{> eaten-block}}
      {{/if}}
    {{/each}}
    </ol> 
  </div>
</div>

<div class="row justify-content-sm-center vertical-margin-sm">
  <div class="col-sm-6">
    <p class="text-center vertical-margin-sm">Enter the name of a Burger you would like to eat. </p>
    <form class="create-form ls">
      <div class="form-group">
        <textarea class="form-control" id="new-burger" name="burger" rows="2"></textarea>
      </div>
      <div class="text-center">
        <button class="btn vertical-margin-sm burger-btn" id="add-burger" type="submit">Add Burger</button>
      </div>
      
    </form>
  </div>
</div>

</div>


